<!DOCTYPE html>
<html>
    <head>
        <title>Spacebox</title>
        <meta charset="utf-8">
        <% if (!check) { %>
            <style type="text/css">
                <% include ../public/css/main.css %>
            </style>
        <% } %>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
        <script src="https://vk.com/js/api/openapi.js"></script>
    </head>
    <body>
        <script>
            VK.init({ apiId: <%= vk_api_id %> });
        </script>
        <% if (check) { %>
            <script>
                VK.Auth.getLoginStatus(function (response) {
                    if (response.session) {
                        $.get("/", response.session).success(function(data) {
                            window.location.replace(window.location);
                        });
                    }
                });
            </script>
        <% } else { %>
            <div id="main">
                <h1>Spacebox</h1>
                <div>
                    Для начала необходимо
                        <button id="vk-login">авторизоваться</button>
                </div>
            </div>
            <script>
                $('#vk-login').click(function(event) {
                    event.preventDefault();
                    VK.Auth.login(function(response) {
                        if (response.session) {
                            $.get("/", response.session).success(function(data) {
                                window.location.replace(window.location);
                            });
                        }
                    }, VK.access.FRIENDS);
                });
            </script>
        <% } %>
    </body>
</html>
