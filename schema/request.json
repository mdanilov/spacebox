{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Spacebox request API",
    "description": "Schema for spacebox server request validation",
    "type": "object",
    "required": [ "request" ],
    "properties": {
        "request": {
            "type": "object",
            "oneOf": [
                { "$ref": "#/definitions/mobile/login" },
                { "$ref": "#/definitions/mobile/getLoginStatus" },
                { "$ref": "#/definitions/getUsers" },
                { "$ref": "#/definitions/login" },
                { "$ref": "#/definitions/logout" },
                { "$ref": "#/definitions/changeLikeStatus" },
                { "$ref": "#/definitions/getFriends" },
                { "$ref": "#/definitions/dislike" }
            ]
        }
    },
    "definitions": {
        "mobile": {
            "login": {
                "description": "Mobile login request",
                "type": "object",
                "properties": {
                    "url": { "enum": [ "/mobile/login" ] },
                    "code": {
                        "title": "VK API access code",
                        "type": "string"
                    }
                },
                "required": ["url", "code"],
                "additionalProperties": false
            },
            "getLoginStatus": {
                "description": "Mobile login status request",
                "type": "object",
                "properties": {
                    "url": { "enum": [ "/mobile/getLoginStatus" ] }
                },
                "required": ["url"],
                "additionalProperties": false
            }
        },
        "getUsers": {
            "type": "object",
            "properties": {
                "url": { "enum": [ "/getUsers", "/mobile/getUsers" ] },
                "latitude": {
                    "title": "Latitude",
                    "type": "number"
                },
                "longitude": {
                    "title": "Longitude",
                    "type": "number"
                },
                "options": {
                    "description": "Search option",
                    "type": "object",
                    "properties": {
                        "ageInterval": {
                            "description": "Age interval",
                            "type": "object",
                            "properties": {
                                "top": {
                                    "title": "Top age",
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 99
                                },
                                "bottom": {
                                    "title": "Bottom age",
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 99
                                }
                            },
                            "required": ["top", "bottom"],
                            "additionalProperties": false
                        },
                        "sex": {
                            "title": "Sex: 1 - female, 2 - male, 0 - both",
                            "enum": [ 0, 1, 2 ]
                        },
                        "radius": {
                            "title": "Search radius",
                            "type": "number"
                        }
                    },
                    "required": ["radius"],
                    "additionalProperties": false
                }
            },
            "required": ["url", "latitude", "longitude", "options"],
            "additionalProperties": false
        },
        "login": {
            "description": "Login request",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/login" ] },
                "secret": {
                    "title": "Secret",
                    "type": "string"
                },
                "mid": {
                    "title": "VK user id",
                    "type": "string"
                },
                "sig": {
                    "title": "Signature",
                    "description": "md5 from the concatenation of the expire, mid, secret, sid",
                    "type": "string"
                },
                "sid": {
                    "title": "Sid",
                    "type": "string"
                },
                "expire": {
                    "title": "Expire session time",
                    "type": "number"
                }
            },
            "required": ["url", "secret", "mid", "expire", "sid", "sig"],
            "additionalProperties": true
        },
        "logout": {
            "description": "Logout request",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/logout", "/mobile/logout" ] }
            },
            "required": ["url"],
            "additionalProperties": false
        },
        "changeLikeStatus": {
            "description": "Like request",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/changeLikeStatus", "/mobile/changeLikeStatus" ] },
                "id": {
                    "title": "VK user id",
                    "description": "liked by user",
                    "type": "string"
                },
                "status": {
                    "title": "like status",
                    "description": "relationship between users",
                    "enum": [ "1", "-1" ]
                }
            },
            "required": ["url", "id", "status"],
            "additionalProperties": false
        },
        "getFriends": {
            "description": "get friends for current user",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/getFriends", "/mobile/getFriends" ] }
            },
            "required": ["url"],
            "additionalProperties": false
        }
    }
}
