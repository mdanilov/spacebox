{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Spacebox request API",
    "description": "Schema for spacebox server request validation",
    "type": "object",
    "required": [ "request" ],
    "properties": {
        "request": {
            "type": "object",
            "oneOf": [
                { "$ref": "#/definitions/mobile/login" },
                { "$ref": "#/definitions/mobile/getLoginStatus" },
                { "$ref": "#/definitions/users.get" },
                { "$ref": "#/definitions/login" },
                { "$ref": "#/definitions/logout" },
                { "$ref": "#/definitions/changeLikeStatus" },
                { "$ref": "#/definitions/friends.get" },
                { "$ref": "#/definitions/friends.delete" },
                { "$ref": "#/definitions/account.destroy" },
                { "$ref": "#/definitions/dislike" }
            ]
        }
    },
    "definitions": {
        "mobile": {
            "login": {
                "description": "Mobile login request",
                "type": "object",
                "properties": {
                    "url": { "enum": [ "/mobile/login" ] },
                    "code": {
                        "title": "VK API access code",
                        "type": "string"
                    }
                },
                "required": ["url", "code"],
                "additionalProperties": false
            },
            "getLoginStatus": {
                "description": "Mobile login status request",
                "type": "object",
                "properties": {
                    "url": { "enum": [ "/mobile/getLoginStatus" ] }
                },
                "required": ["url"],
                "additionalProperties": false
            }
        },
        "users.get": {
            "title": "users.get",
            "description": "returns detailed information about users",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/users.get", "/mobile/users.get" ] },
                "latitude": {
                    "title": "latitude",
                    "type": "number"
                },
                "longitude": {
                    "title": "longitude",
                    "type": "number"
                },
                "options": {
                    "description": "Search option",
                    "type": "object",
                    "properties": {
                        "ageInterval": {
                            "description": "Age interval",
                            "type": "object",
                            "properties": {
                                "top": {
                                    "title": "Top age",
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 99
                                },
                                "bottom": {
                                    "title": "Bottom age",
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 99
                                }
                            },
                            "required": ["top", "bottom"],
                            "additionalProperties": false
                        },
                        "sex": {
                            "title": "Sex: 1 - female, 2 - male, 0 - both",
                            "enum": [ 0, 1, 2 ]
                        },
                        "radius": {
                            "title": "Search radius",
                            "type": "number"
                        }
                    },
                    "required": ["radius"],
                    "additionalProperties": false
                }
            },
            "required": ["url", "latitude", "longitude", "options"],
            "additionalProperties": false
        },
        "login": {
            "description": "Login request",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/login" ] },
                "secret": {
                    "title": "Secret",
                    "type": "string"
                },
                "mid": {
                    "title": "VK user id",
                    "type": "string"
                },
                "sig": {
                    "title": "Signature",
                    "description": "md5 from the concatenation of the expire, mid, secret, sid",
                    "type": "string"
                },
                "sid": {
                    "title": "Sid",
                    "type": "string"
                },
                "expire": {
                    "title": "Expire session time",
                    "type": "number"
                }
            },
            "required": ["url", "secret", "mid", "expire", "sid", "sig"],
            "additionalProperties": true
        },
        "logout": {
            "description": "Logout request",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/logout", "/mobile/logout" ] }
            },
            "required": ["url"],
            "additionalProperties": false
        },
        "changeLikeStatus": {
            "description": "Like request",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/changeLikeStatus", "/mobile/changeLikeStatus" ] },
                "id": {
                    "title": "VK user id",
                    "description": "liked by user",
                    "type": "string"
                },
                "status": {
                    "title": "like status",
                    "description": "relationship between users",
                    "enum": [ "1", "-1" ]
                }
            },
            "required": ["url", "id", "status"],
            "additionalProperties": false
        },
        "friends.get": {
            "title": "friends.get",
            "description": "returns a list of ID of the user's friends",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/friends.get", "/mobile/friends.get" ] }
            },
            "required": ["url"],
            "additionalProperties": false
        },
        "friends.delete": {
            "title": "friends.delete",
            "description": "remove user from your friends list",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/friends.delete", "/mobile/friends.delete" ] },
                "user_id": {
                    "title": "user_id",
                    "description": "ID of the user you want to remove from your friends list",
                    "type": "number"
                }
            },
            "required": ["url", "user_id"],
            "additionalProperties": false
        },
        "account.destroy": {
            "title": "account.destroy",
            "description": "delete account for current user",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/account.destroy", "/mobile/account.destroy" ] }
            },
            "required": ["url"],
            "additionalProperties": false
        }
    }
}
