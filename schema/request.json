{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Spacebox request API",
    "description": "Schema for spacebox server request validation",
    "type": "object",
    "required": [ "request" ],
    "properties": {
        "request": {
            "type": "object",
            "oneOf": [
                { "$ref": "#/definitions/mobile/login" },
                { "$ref": "#/definitions/mobile/getLoginStatus" },
                { "$ref": "#/definitions/getUsers" },
                { "$ref": "#/definitions/login" },
                { "$ref": "#/definitions/logout" },
                { "$ref": "#/definitions/like" },
                { "$ref": "#/definitions/dislike" }
            ]
        }
    },
    "definitions": {
        "mobile": {
            "login": {
                "description": "Mobile login request",
                "type": "object",
                "properties": {
                    "url": { "enum": [ "/mobile/login" ] },
                    "code": {
                        "title": "VK API access code",
                        "type": "string"
                    }
                },
                "required": ["url", "code"],
                "additionalProperties": false
            },
            "getLoginStatus": {
                "description": "Mobile login status request",
                "type": "object",
                "properties": {
                    "url": { "enum": [ "/mobile/getLoginStatus" ] }
                },
                "required": ["url"],
                "additionalProperties": false
            }
        },
        "getUsers": {
            "type": "object",
            "properties": {
                "url": { "enum": [ "/getUsers", "/mobile/getUsers" ] },
                "latitude": {
                    "title": "Latitude",
                    "type": "string"
                },
                "longitude": {
                    "title": "Longitude",
                    "type": "string"
                },
                "radius": {
                    "title": "Search radius",
                    "type": "string"
                }
            },
            "required": ["url", "latitude", "longitude", "radius"],
            "additionalProperties": false
        },
        "login": {
            "description": "Login request",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/login" ] },
                "secret": {
                    "title": "Secret",
                    "type": "string"
                },
                "mid": {
                    "title": "VK user id",
                    "type": "string"
                },
                "sig": {
                    "title": "Signature",
                    "description": "md5 from the concatenation of the expire, mid, secret, sid",
                    "type": "string"
                },
                "sid": {
                    "title": "Sid",
                    "type": "string"
                },
                "expire": {
                    "title": "Expire session time",
                    "type": "string"
                }
            },
            "required": ["url", "secret", "mid", "expire", "sid", "sig"],
            "additionalProperties": true
        },
        "logout": {
            "description": "Logout request",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/logout", "/mobile/logout" ] }
            },
            "required": ["url"],
            "additionalProperties": false
        },
        "like": {
            "description": "Like request",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/like", "/mobile/like" ] },
                "id": {
                    "title": "VK user id",
                    "description": "liked by user",
                    "type": "string"
                }
            },
            "required": ["url", "id"],
            "additionalProperties": false
        },
        "dislike": {
            "description": "Dislike request",
            "type": "object",
            "properties": {
                "url": { "enum": [ "/dislike", "/mobile/dislike" ] },
                "id": {
                    "title": "VK user id",
                    "description": "disliked by user",
                    "type": "string"
                }
            },
            "required": ["url", "id"],
            "additionalProperties": false
        }
    }
}
